{
  "system": {
    "name": "6-Layer Hybrid Quantum-Classical Image Encryption",
    "version": "4.0",
    "mode": "production",
    "debug": false,
    "architecture": "6-layer (Preprocess -> AI/FlexiMo -> Decision/ROI-BG -> Quantum NEQR -> Classical AES -> Fusion)"
  },

  "input": {
    "image_path": "input/test_image.png",
    "format": "PNG",
    "dtype": "uint8"
  },

  "output": {
    "encrypted_dir": "output/encrypted",
    "decrypted_dir": "output/decrypted",
    "metadata_dir": "output/metadata",
    "log_dir": "logs",
    "save_visualizations": true
  },

  "preprocessing_engine": {
    "enabled": true,
    "target_format": "PNG",
    "preserve_original": true
  },

  "ai_engine": {
    "enabled": true,
    "model": "fleximo_vision_transformer",
    "confidence_threshold": 0.6,
    "saliency_sigma": 1.5,
    "fallback": "contrast_based"
  },

  "decision_engine": {
    "enabled": true,
    "block_size": 8,
    "roi_threshold": 0.0,
    "description": "Fixed 8x8 blocks. Any block with at least one ROI pixel is quantum-encrypted."
  },

  "quantum_engine": {
    "enabled": true,
    "backend": "repos/quantum_repo",
    "method": "NEQR",
    "shots": 1024,
    "description": "Uses Repo B encryption_pipeline.encrypt_image() per ROI block"
  },

  "classical_engine": {
    "enabled": true,
    "algorithm": "AES-256-GCM",
    "key_size": 256,
    "nonce_size": 96,
    "pbkdf2_iterations": 100000,
    "description": "AES-256-GCM for background image via cryptography library"
  },

  "fusion_engine": {
    "enabled": true,
    "description": "Place encrypted ROI blocks at original positions over noise-filled BG"
  },

  "metadata_engine": {
    "enabled": true,
    "store_roi_mask": true,
    "store_block_map": true,
    "store_aes_bundle": true,
    "store_encrypted_roi": true,
    "compression": "zlib"
  },

  "verification_engine": {
    "enabled": true,
    "check_entropy": true,
    "check_npcr": true,
    "check_uaci": true,
    "check_correlation": true
  },

  "performance": {
    "parallel_blocks": false,
    "num_workers": 1,
    "gpu_acceleration": false
  },

  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_output": "logs/system.log",
    "console_output": true
  },

  "security": {
    "secure_random_source": "os.urandom",
    "key_rotation_enabled": false
  }
}
